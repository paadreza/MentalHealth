            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="SubstanceUse" class="form-label">Substance Use</label>
                <input type="range" class="form-range" asp-for="SubstanceUse" min="0" max="10" step="1" />
                <div class="d-flex justify-content-between">
                    <span>None (0)</span>
                    <span>Severe (10)</span>
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Paranoia" class="form-label">Paranoia</label>
                <input type="range" class="form-range" asp-for="Paranoia" min="0" max="10" step="1" />
                <div class="d-flex justify-content-between">
                    <span>None (0)</span>
                    <span>Severe (10)</span>
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Hallucinations" class="form-label">Hallucinations</label>
                <input type="range" class="form-range" asp-for="Hallucinations" min="0" max="10" step="1" />
                <div class="d-flex justify-content-between">
                    <span>None (0)</span>
                    <span>Severe (10)</span>
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="EmotionalChanges" class="form-label">Emotional Changes</label>
                <input type="range" class="form-range" asp-for="EmotionalChanges" min="0" max="10" step="1" />
                <div class="d-flex justify-content-between">
                    <span>None (0)</span>
                    <span>Severe (10)</span>
                </div>
            </div>

            <div class="col-lg-12 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-brain me-2"></i>Cognitive Symptoms</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="card symptom-card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-head-side-brain me-2 text-primary"></i>
                                            Concentration Issues
                                        </h6>
                                        <p class="small text-muted mb-3">Rate your difficulty concentrating or focusing</p>
                                        <input type="range" class="form-range" asp-for="ConcentrationIssues" min="0" max="10" step="1" />
                                        <div class="d-flex justify-content-between small">
                                            <span class="text-muted">None (0)</span>
                                            <span id="concentrationIssuesValue" class="badge bg-primary">5</span>
                                            <span class="text-muted">Severe (10)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="card symptom-card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-battery-quarter me-2 text-primary"></i>
                                            Fatigue
                                        </h6>
                                        <p class="small text-muted mb-3">Rate your feelings of tiredness or lack of energy</p>
                                        <input type="range" class="form-range" asp-for="Fatigue" min="0" max="10" step="1" />
                                        <div class="d-flex justify-content-between small">
                                            <span class="text-muted">None (0)</span>
                                            <span id="fatigueValue" class="badge bg-primary">5</span>
                                            <span class="text-muted">Severe (10)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-12 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="fas fa-stethoscope me-2"></i>Generate Diagnosis
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Update the badge values when sliders change
        document.addEventListener('DOMContentLoaded', function() {
            const sliders = document.querySelectorAll('input[type="range"]');
            
            // Initialize all badges with current values
            sliders.forEach(slider => {
                const id = slider.id;
                const valueDisplay = document.getElementById(id + 'Value');
                if (valueDisplay) {
                    valueDisplay.textContent = slider.value;
                }
            });
            
            // Add event listeners to update values when sliders change
            sliders.forEach(slider => {
                slider.addEventListener('input', function() {
                    const id = this.id;
                    const valueDisplay = document.getElementById(id + 'Value');
                    if (valueDisplay) {
                        valueDisplay.textContent = this.value;
                    }
                });
            });
        });
    </script>
}
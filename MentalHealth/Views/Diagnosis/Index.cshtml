@model MentalHealth.Models.MentalHealthSymptoms

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0 animated-item">
                <div class="card-body">
                    <h1 class="card-title text-primary">
                        <i class="fas fa-stethoscope me-2"></i>Mental Health Assessment
                    </h1>
                    <p class="card-text text-muted">
                        This assessment helps identify potential mental health concerns based on your symptoms. 
                        Answer each question honestly and accurately to receive the most helpful assessment.
                    </p>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> This is not a substitute for professional medical advice. Always consult with a qualified healthcare provider.
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Html.ValidationSummary()
        </div>
    }

    <form asp-action="Diagnose" asp-controller="Diagnosis" method="post" id="multiStepForm" class="mb-5">
        <!-- Step Progress Indicator -->
        <div class="step-progress mb-4 animated-item">
            <div class="step-item active">1</div>
            <div class="step-item">2</div>
            <div class="step-item">3</div>
            <div class="step-item">4</div>
        </div>

        <!-- Step 1: Common Mood Symptoms -->
        <div class="form-step active">
            <div class="card shadow-sm mb-4 animated-item">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-brain me-2"></i>Step 1: Mood & Emotions</h5>
                </div>
                <div class="card-body">
                    <p class="card-text mb-4">
                        On a scale of 0 (none) to 10 (severe), rate your experience with the following symptoms over the past two weeks.
                    </p>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-head-side-virus me-2 text-primary"></i>
                                    Anxiety Level
                                </h6>
                                <p class="small text-muted mb-3">Rate your feelings of anxiety, worry, or nervousness</p>
                                <input type="range" class="form-range" asp-for="Anxiety" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-cloud-rain me-2 text-primary"></i>
                                    Depression
                                </h6>
                                <p class="small text-muted mb-3">Rate your feelings of sadness, hopelessness, or emptiness</p>
                                <input type="range" class="form-range" asp-for="Depression" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-sync-alt me-2 text-primary"></i>
                                    Mood Swings
                                </h6>
                                <p class="small text-muted mb-3">Rate the frequency and intensity of mood changes</p>
                                <input type="range" class="form-range" asp-for="MoodSwings" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-bolt me-2 text-primary"></i>
                                    Irritability
                                </h6>
                                <p class="small text-muted mb-3">Rate how easily annoyed or angered you get</p>
                                <input type="range" class="form-range" asp-for="Irritability" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="validation-message alert alert-danger mt-3" style="display: none;"></div>
                    
                    <div class="d-flex justify-content-end mt-3">
                        <button type="button" class="btn btn-primary btn-next-step">
                            Continue <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Step 2: Physical & Cognitive Symptoms -->
        <div class="form-step">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-heartbeat me-2"></i>Step 2: Physical & Cognitive Symptoms</h5>
                </div>
                <div class="card-body">
                    <p class="card-text mb-4">
                        On a scale of 0 (none) to 10 (severe), rate your experience with the following symptoms over the past two weeks.
                    </p>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-bed me-2 text-primary"></i>
                                    Sleep Issues
                                </h6>
                                <p class="small text-muted mb-3">Rate problems with falling asleep, staying asleep, or oversleeping</p>
                                <input type="range" class="form-range" asp-for="SleepIssues" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-brain me-2 text-primary"></i>
                                    Concentration Issues
                                </h6>
                                <p class="small text-muted mb-3">Rate your difficulty focusing, making decisions, or remembering things</p>
                                <input type="range" class="form-range" asp-for="ConcentrationIssues" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-battery-quarter me-2 text-primary"></i>
                                    Fatigue
                                </h6>
                                <p class="small text-muted mb-3">Rate your level of tiredness or lack of energy</p>
                                <input type="range" class="form-range" asp-for="Fatigue" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-utensils me-2 text-primary"></i>
                                    Appetite Changes
                                </h6>
                                <p class="small text-muted mb-3">Rate changes in your appetite or weight</p>
                                <input type="range" class="form-range" asp-for="AppetiteChanges" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="validation-message alert alert-danger mt-3" style="display: none;"></div>
                    
                    <div class="d-flex justify-content-between mt-3">
                        <button type="button" class="btn btn-outline-primary btn-prev-step">
                            <i class="fas fa-arrow-left me-2"></i> Previous
                        </button>
                        <button type="button" class="btn btn-primary btn-next-step">
                            Continue <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Step 3: Social & Behavioral Symptoms -->
        <div class="form-step">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Step 3: Social & Behavioral Symptoms</h5>
                </div>
                <div class="card-body">
                    <p class="card-text mb-4">
                        On a scale of 0 (none) to 10 (severe), rate your experience with the following symptoms over the past two weeks.
                    </p>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-user-slash me-2 text-primary"></i>
                                    Social Withdrawal
                                </h6>
                                <p class="small text-muted mb-3">Rate your tendency to avoid social interactions</p>
                                <input type="range" class="form-range" asp-for="SocialWithdrawal" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-tablets me-2 text-primary"></i>
                                    Substance Use
                                </h6>
                                <p class="small text-muted mb-3">Rate your use of alcohol, drugs, or other substances to cope</p>
                                <input type="range" class="form-range" asp-for="SubstanceUse" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-heartbeat me-2 text-primary"></i>
                                    Physical Symptoms
                                </h6>
                                <p class="small text-muted mb-3">Rate physical complaints without clear medical cause (headaches, stomachaches)</p>
                                <input type="range" class="form-range" asp-for="PhysicalSymptoms" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-history me-2 text-primary"></i>
                                    Trauma History
                                </h6>
                                <p class="small text-muted mb-3">Rate the impact of past traumatic experiences on your current life</p>
                                <input type="range" class="form-range" asp-for="TraumaHistory" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="validation-message alert alert-danger mt-3" style="display: none;"></div>
                    
                    <div class="d-flex justify-content-between mt-3">
                        <button type="button" class="btn btn-outline-primary btn-prev-step">
                            <i class="fas fa-arrow-left me-2"></i> Previous
                        </button>
                        <button type="button" class="btn btn-primary btn-next-step">
                            Continue <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Step 4: Advanced Symptoms & Submit -->
        <div class="form-step">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-clipboard-check me-2"></i>Step 4: Final Assessment</h5>
                </div>
                <div class="card-body">
                    <p class="card-text mb-4">
                        Please complete these final questions to help us provide a more accurate assessment.
                    </p>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-exclamation-triangle me-2 text-primary"></i>
                                    Paranoia
                                </h6>
                                <p class="small text-muted mb-3">Rate feelings of paranoia or suspicion about others</p>
                                <input type="range" class="form-range" asp-for="Paranoia" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-eye me-2 text-primary"></i>
                                    Hallucinations
                                </h6>
                                <p class="small text-muted mb-3">Rate experiences of seeing, hearing, or feeling things that others don't</p>
                                <input type="range" class="form-range" asp-for="Hallucinations" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-balance-scale me-2 text-primary"></i>
                                    Emotional Changes
                                </h6>
                                <p class="small text-muted mb-3">Rate significant changes in emotional responses compared to your usual self</p>
                                <input type="range" class="form-range" asp-for="EmotionalChanges" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="symptom-card h-100 p-4">
                                <h6 class="card-title">
                                    <i class="fas fa-brain me-2 text-primary"></i>
                                    Thought Patterns
                                </h6>
                                <p class="small text-muted mb-3">Rate unusual thought patterns, obsessive thoughts, or racing thoughts</p>
                                <input type="range" class="form-range" asp-for="ThoughtPatterns" min="0" max="10" step="1" />
                                <div class="d-flex justify-content-between small text-muted mt-1">
                                    <span>None</span>
                                    <span>Moderate</span>
                                    <span>Severe</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="validation-message alert alert-danger mt-3" style="display: none;"></div>
                    
                    <div class="d-flex justify-content-between mt-3">
                        <button type="button" class="btn btn-outline-primary btn-prev-step">
                            <i class="fas fa-arrow-left me-2"></i> Previous
                        </button>
                        <button type="submit" class="btn btn-primary btn-submit">
                            <i class="fas fa-clipboard-check me-2"></i> Get Assessment
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Pre-set all sliders to zero on page load
        document.addEventListener('DOMContentLoaded', function() {
            const ranges = document.querySelectorAll('.form-range');
            ranges.forEach(range => {
                range.value = 0;
            });
        });
    </script>
}
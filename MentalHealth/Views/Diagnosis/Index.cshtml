            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="SubstanceUse" class="form-label">Substance Use</label>
                <input type="range" class="form-range" asp-for="SubstanceUse" min="0" max="10" step="1" />
                <div class="d-flex justify-content-between">
                    <span>None (0)</span>
                    <span>Severe (10)</span>
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Paranoia" class="form-label">Paranoia</label>
                <input type="range" class="form-range" asp-for="Paranoia" min="0" max="10" step="1" />

@model MentalHealth.Models.MentalHealthPrediction

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h1 class="card-title text-primary mb-4">
                        <i class="fas fa-clipboard-check me-2"></i>Assessment Results
                    </h1>
                    
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i> This assessment is provided for informational purposes only and should not replace professional medical advice.
                    </div>
                    
                    <div class="result-container p-4 rounded">
                        <div class="row align-items-center mb-4">
                            <div class="col-md-8">
                                <h2 class="diagnosis-result mb-2">
                                    <i class="fas fa-stethoscope me-2"></i>Primary Diagnosis: <span class="text-primary">@Model.Diagnosis</span>
                                </h2>
                                <p class="text-muted">Based on your symptom assessment, our AI system has identified the following potential diagnosis.</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="p-3 rounded-circle bg-light d-inline-flex align-items-center justify-content-center" style="width: 150px; height: 150px;">
                                    <div class="text-center">
                                        <h3 class="mb-0 text-primary">@(Math.Round(Model.Probability * 100, 0))%</h3>
                                        <p class="mb-0 small text-muted">Confidence</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <h4 class="mb-3"><i class="fas fa-chart-bar me-2 text-primary"></i>Confidence Level</h4>
                        <div class="probability-meter mb-3">
                            <div class="probability-fill" style="width: @(Model.Probability * 100)%"></div>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="small text-muted">Low Confidence</span>
                            <span class="small text-muted">High Confidence</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Recommendations</h5>
                </div>
                <div class="card-body">
                    @if (Model.Recommendations?.Any() == true)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var recommendation in Model.Recommendations)
                            {
                                <li class="list-group-item border-0 ps-0">
                                    <i class="fas fa-check-circle text-success me-2"></i> @recommendation
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">
                            <i class="fas fa-info-circle me-2"></i>
                            Based on your results, we recommend consulting with a mental health professional to discuss your symptoms in detail.
                        </p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item border-0 ps-0">
                                <i class="fas fa-check-circle text-success me-2"></i> 
                                Consult with a licensed therapist or psychiatrist
                            </li>
                            <li class="list-group-item border-0 ps-0">
                                <i class="fas fa-check-circle text-success me-2"></i> 
                                Keep track of your symptoms and their intensity
                            </li>
                            <li class="list-group-item border-0 ps-0">
                                <i class="fas fa-check-circle text-success me-2"></i> 
                                Maintain healthy lifestyle habits including regular sleep patterns
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-brain me-2"></i>Symptom Analysis</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-3">This chart shows which symptoms contributed most to the diagnosis.</p>
                    
                    @if (Model.SymptomContributions?.Any() == true)
                    {
                        @foreach (var symptom in Model.SymptomContributions.OrderByDescending(s => s.Value).Take(5))
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <label class="small">@symptom.Key</label>
                                    <span class="small text-primary">@(Math.Round(symptom.Value * 100, 0))%</span>
                                </div>
                                <div class="probability-meter">
                                    <div class="probability-fill" style="width: @(symptom.Value * 100)%"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Detailed symptom analysis is not available for this assessment.</p>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <p class="text-muted mb-4">What would you like to do next?</p>
                    <a asp-action="Index" class="btn btn-primary me-2">
                        <i class="fas fa-redo me-2"></i>Start New Assessment
                    </a>
                    <a href="#" class="btn btn-outline-primary">
                        <i class="fas fa-print me-2"></i>Print Results
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch MentalHealth Web App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/MentalHealth/bin/Debug/net8.0/MentalHealth.dll",
            "args": [],
            "cwd": "${workspaceFolder}/MentalHealth",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/MentalHealth/Views"
            }
        }
    ]
} 